<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:background="@drawable/gradient_drawable"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <Button
            android:text="Back"
            android:layout_width="wrap_content"
            android:textColor="@color/black"
            android:layout_height="wrap_content" android:id="@+id/button5"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <Spinner
            android:layout_width="190dp"
            android:layout_height="35dp" android:id="@+id/spinner2"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="@color/white"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="35dp"
            android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Spinner
            android:layout_width="190dp"
            android:layout_height="35dp" android:id="@+id/spinner3"
            android:background="@drawable/rounded_rect"
            android:backgroundTint="@color/white"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="78dp" android:layout_marginEnd="20dp" app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.recyclerview.widget.RecyclerView
            android:layout_width="0dp"
            android:layout_gravity="center"
            android:background="@null"
            android:layout_height="0dp"
            android:id="@+id/recentlyAdded"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="10dp" android:layout_marginEnd="10dp" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@+id/spinner3"/>
</androidx.constraintlayout.widget.ConstraintLayout>